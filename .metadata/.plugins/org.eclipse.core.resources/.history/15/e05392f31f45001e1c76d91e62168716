package day_01;

import java.util.Scanner;
public class student {
	
	int maths;
	int science=0;
	int english=0;
	int socials=0;
	int total=0;
	
	int totals()
	{
		total = (maths + science + english + socials);
		
		System.out.println(total);
		
		return total;
		}
	
	int average()
	{
		int avergemk = (total/4);
		
		System.out.println(avergemk);
		
		return avergemk;
	}
	
	public static void main(String args[]) {
		
		student obj1 = new student();
		
	//	obj1.maths=90;
	//	obj1.english=30;
	//	obj1.science=100;
	//	obj1.socials=88;
		
	//	obj1.totals();
	//	obj1.average();
		
		Scanner myobj = new Scanner(System.in);
		System.out.println("Enter maths Marks:");
		int maths = myobj.nextInt();
		
		System.out.println("Enter english Marks:");
		int english = myobj.nextInt();
		
		System.out.println("Enter science Marks:");
		int science = myobj.nextInt();
		
		System.out.println("Enter socials Marks:");
		int socials = myobj.nextInt();
		
	//	System.out.println("Enter english Marks:");
	//	english = myobj.nextLine();
	//	System.out.println("Enter science Marks:");
	//	science = myobj.nextLine();
	//	System.out.println("Enter socials Marks:");
	//	socials = myobj.nextLine();
		
		obj1.totals();
		
		
	    obj1.average();
	}
	
}
