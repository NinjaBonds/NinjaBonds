package day_01;

import java.util.Scanner;

public class student {
	
	int maths=0;
	int science=0;
	int english=0;
	int socials=0;
	int total=0;
	
	void totals()
	{
		total = (maths + science + english + socials);
		
		System.out.println(total);
		
		}
	
	void average()
	{
		int avergemk = (total/4);
		
		System.out.println(avergemk);
	}
	
	public static void main(String args[]) {
		
		student obj1 = new student();
		
	//	obj1.maths=90;
	//	obj1.english=30;
	//	obj1.science=100;
	//	obj1.socials=88;
		
	//	obj1.totals();
	//	obj1.average();
		
		Scanner myobj = new Scanner(System.in);
		System.out.println("Enter maths Marks:");
		int number1 = myobj.nextLine();
		System.out.println("Enter english Marks:");
		int number2 = myobj.nextLine();
		System.out.println("Enter science Marks:");
		int number3 = myobj.nextLine();
		System.out.println("Enter socials Marks:");
		int number4 = myobj.nextLine();
		
		myobj.totals();
		myobj.average();
	}
	
}
